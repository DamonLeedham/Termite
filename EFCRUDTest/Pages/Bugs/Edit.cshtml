    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Bug</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Bug.ID" />
            <div class="form-group">
                <label asp-for="Bug.ProjectID" class="control-label"></label>
                <input asp-for="Bug.ProjectID" class="form-control" />
                <span asp-validation-for="Bug.ProjectID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Bug.UserID" class="control-label"></label>
                <select asp-for="Bug.UserID" class="form-control" asp-items="ViewBag.UserID"></select>
                <span asp-validation-for="Bug.UserID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Bug.StatusID" class="control-label"></label>
                <input asp-for="Bug.StatusID" class="form-control" />
                <span asp-validation-for="Bug.StatusID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Bug.BugTypeID" class="control-label"></label>
                <input asp-for="Bug.BugTypeID" class="form-control" />
                <span asp-validation-for="Bug.BugTypeID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Bug.Description" class="control-label"></label>
                <input asp-for="Bug.Description" class="form-control" />
                <span asp-validation-for="Bug.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

